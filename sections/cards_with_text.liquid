<section id="{{ section.settings.anchorID }}" class="section-cardwtext section-padding {% if section.settings.sectionPadding %} remove-extra  {% endif %}" style="background-color: {{ section.settings.sectionColor }};">
    <div class="cardwtext-shell shell">
        <h2 class="cardwtext-title {% if section.settings.sectionTitle != blank %} section-title {% endif %}">{{ section.settings.sectionTitle }}</h2>
        {% if section.blocks != blank %}
            <div class="columns is-multiline is-variable is-2">
                {% for block in section.blocks %}
                    <div class="column is-half">
                        <div class="card">
                            <div class="card-image">
                                <figure class="image is-1by1">
                                    <img src="{{ block.settings.cardImg | img_url: 'master' }}" alt="Card Image" loading="lazy">
                                </figure>
                            </div>
                            <footer class="card-footer">
                                <div class="card-footer-item">
                                <p class="g-card-heading-small">{{ block.settings.cardText }}</p>
                                </div>
                            </footer>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</section>

{% schema %}
{
    "name": "Card with Text",
    "settings": [
        {
            "type": "checkbox",
            "id": "sectionPadding",
            "label": "Remove section padding?",
            "default": false
        },
        {
            "type": "text",
            "id": "sectionTitle",
            "label": "Section Heading",
            "default": "Services"
        },
        {
          "type": "color",
          "id": "sectionColor",
          "label": "Section BG",
          "default": "#f7f7f7"
        }
    ],
    "blocks": [
        {
            "name": "Card",
            "type": "card",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "cardImg",
                    "label": "Card Image"
                },
                {
                    "type": "textarea",
                    "id": "cardText",
                    "label": "Card Text Left",
                    "default": "Write something here to describe your services"
                }
            ]
        }
    ],
    "presets": [
        {
        "name": "Card with Text"
        }
    ]
}
{% endschema %}