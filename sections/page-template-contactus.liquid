  {% schema %}
  {
    "name": "Contact Us",
    "settings": [
      {
        "type": "checkbox",
        "id": "sectionPadding",
        "label": "Remove Section Padding?",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "contact-info",
        "name": "Contact Information",
        "settings": [
          {
            "type": "text",
            "id": "infoHeading",
            "label": "Info Title"
          },
          {
            "type": "textarea",
            "id": "text1",
            "label": "Text Info 1"
          },
          {
            "type": "textarea",
            "id": "text2",
            "label": "Text Info 2"
          },
          {
            "type": "textarea",
            "id": "text3",
            "label": "Text Info 3"
          },
          {
            "type": "textarea",
            "id": "text4",
            "label": "Text Info 4"
          }
        ]
      }
    ]
  }
  {% endschema %}