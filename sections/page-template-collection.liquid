<!-- Start Section collection list -->
<section class="section-collection section-padding">
    <div class="page-shell shell">
        <a href="/" class="page-back"><span>< Back</span></a>
        <div class="page-title">
            <p>{{ section.settings.colTitle }}</p>
        </div>
        {% assign collections = section.settings.colList %}
        <div class="page-products">
           {% render "choose-product-card" for collections.products as product %}
        </div>
    </div>
</section>

{% schema %}
  {
    "name": "Collection Cards",
    "settings": [
        {
            "type": "text",
            "id": "colTitle",
            "label": "Collection Title",
            "default": "Featured Collection"
        },
        {
            "type": "collection",
            "id": "colList",
            "label": "Collection List"
        }
    ],
    "presets": [
        {
            "name": "Collection Cards"
        }
    ]
  }
{% endschema %}