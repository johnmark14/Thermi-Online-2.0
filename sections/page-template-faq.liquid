{% schema %}
{
  "name": "Page FAQ",
  "settings": [
    {
      "type": "textarea",
      "id": "pageMessage",
      "label": "Page Message",
      "default": "Please checkout out some of the answer to our most commonly asked questions below. Can'f find the answer you are looking for? Please contact us and we will be glad to help!"
    }
  ],
  "blocks": [
    {
      "type": "accord-heading",
      "name": "Accord heading",
      "settings": [
        {
          "type": "textarea",
          "id": "textHeading",
          "label": "Text Heading"
        }
      ]
    },
    {
      "type": "accord-item",
      "name": "Accord item",
      "settings": [
        {
          "type": "text",
          "id": "textHeadingItem",
          "label": "Text Item"
        },
        {
          "type": "text",
          "id": "textLeftHeadingItem",
          "label": "Text Left Item"
        },
        {
          "type": "textarea",
          "id": "textContent",
          "label": "Text Content"
        }
      ]
    }
  ]
}
{% endschema %}