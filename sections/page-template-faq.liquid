<!-- Start Section Main for FAQ Page -->

<!-- Rendered when users navigate to shop/products -->
<section class="section-faq section-padding">
  <div class="faq-shell shell">
    <h2 class="faq-title section-title">{{ page.title | escape }}</h2>
    <div class="faq-body">
      <div class="columns is-variable is-4 is-2-tablet">
        <!-- First Column -->
        <div class="column is-one-fifth faq-col-left">
          <div class="faq-nav">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'accord-heading' %}
                  <div class="faq-nav-items">
                    <ul class="item">
                      <li class="g-heading-color">{{ block.settings.textHeading}}</li>
                      {% for block in section.blocks offset:forloop.index %}
                        {% case block.type %}
                          {% when 'accord-item' %}
                            <li class="g-text-color">{{ block.settings.textLeftHeadingItem }}</li>
                          {% else %}
                            {% break %}
                        {% endcase %}
                      {% endfor %}
                    </ul>
                  </div>
                {% else %}
              {% endcase %}
            {% endfor %}
          </div>
        </div>
        <!-- Second Column -->
        <div class="column">
          <div class="faq-message">
            <p class="g-sub-heading-color">{{ section.settings.pageMessage }}</p>
          </div>
          <!-- Accord 1 -->
          {% for block in section.blocks %}
            {%- case block.type -%}
              {%- when 'accord-heading' -%}
                <div class="faq-accord-heading">
                  <span class="g-heading-color">{{ block.settings.textHeading }}</span>
                </div>
              {%- when 'accord-item' -%}
                <div class="faq-accord">
                  <div class="accord-wrapper">
                    <input type="checkbox" name="accord-header" id="accord-{{-block.settings.textHeadingItem | remove: " "-}}-{{-forloop.index-}}" />
                    <label for="accord-{{-block.settings.textHeadingItem | remove: " "-}}-{{-forloop.index-}}">
                      <p class="g-sub-heading-color">{{ block.settings.textHeadingItem}}</p>
                      <span> {% render "chevron-down" %} </span>
                    </label>
                    <div class="accord-body">
                      <p class="g-text-color">{{ block.settings.textContent }}</p>
                    </div>
                  </div>
                </div>
            {%- endcase -%}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
